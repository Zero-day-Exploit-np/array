#include <stdio.h>

int main() {
    // Method 1: Character array with explicit null terminator
    char str1[6] = {'H', 'e', 'l', 'l', 'o', '\0'};

    // Method 2: String literal (null terminator added automatically)
    char str2[] = "Hello";

    // Method 3: Fixed-size array with string literal
    char str3[10] = "Hello";

    printf("%s\n", str1);
    printf("%s\n", str2);
    printf("%s\n", str3);

    return 0;
}
